            // Populate topics when subject changes
            subjectDropdown.addEventListener("change", function () {
                topicDropdown.innerHTML = '<option value="">-- Select Topic --</option>';
                const subject = subjectDropdown.value;
                if (subjectTopics[subject]) {
                    subjectTopics[subject].forEach(topic => {
                        const option = document.createElement("option");
                        option.value = topic.value;
                        option.textContent = topic.text;
                        topicDropdown.appendChild(option);
                    });
                }
                descriptionText.textContent = "Select a topic to see details here.";
            });

            // Show description when topic changes
            topicDropdown.addEventListener("change", function () {
                const subject = subjectDropdown.value;
                const topicValue = topicDropdown.value;
                const topic = subjectTopics[subject]?.find(t => t.value === topicValue);
                if (topic) {
                    descriptionText.textContent = topic.description;
                }
            });

            // Load video when "Start Learning" is clicked
            loadTopicBtn.addEventListener("click", function () {
                const subject = subjectDropdown.value;
                const topicValue = topicDropdown.value;
                const topic = subjectTopics[subject]?.find(t => t.value === topicValue);
                if (topic) {
                    videoTitle.textContent = topic.text;
                    videoWrapper.innerHTML = ""; // clear previous video

                    if (topic.video.startsWith("iframe:")) {
                        const iframe = document.createElement("iframe");
                        iframe.src = topic.video.replace("iframe:", "");
                        iframe.width = "100%";
                        iframe.height = "480";
                        iframe.allow = "autoplay";
                        iframe.frameBorder = "0";
                        videoWrapper.appendChild(iframe);
                    } else {
                        const video = document.createElement("video");
                        video.src = topic.video;
                        video.controls = true;
                        video.autoplay = true;
                        video.width = "100%";
                        video.style.height = 'auto';
                        videoWrapper.appendChild(video);
                    }

                    welcomeScreen.classList.add("hidden");
                    videoPlayerContainer.classList.remove("hidden");
                } else {
                    alert("Please select both subject and topic.");
                }
            });
        });
    
const sendBtn = document.getElementById("video-send-btn");
const input = document.getElementById("video-question-input");
const chatBox = document.getElementById("video-chat-messages");
const testBtn = document.getElementById("start-test-btn");

// Enter key support
input.addEventListener("keydown", (e) => {
  if (e.key === "Enter") sendBtn.click();
});

sendBtn.addEventListener("click", async () => {
    const question = input.value.trim();
    if (!question) return;

    // Show user message
    chatBox.innerHTML += `<p><b>You:</b> ${question}</p>`;
    input.value = "";

    // Loading message
    chatBox.innerHTML += `<p id="loading"><b>ChatGPT:</b> Typing...</p>`;

    try {
        const res = await fetch("http://localhost:5000/chat", {
            method: "POST",
            headers: {"Content-Type": "application/json"},
            body: JSON.stringify({ question })
        });

        const data = await res.json();

        document.getElementById("loading").remove();

        // Show AI reply
        chatBox.innerHTML += `<p><b>ChatGPT:</b> ${data.answer}</p>`;

        // Show Test Button after AI reply
        testBtn.classList.remove("hidden");

    } catch (err) {
        document.getElementById("loading").remove();
        chatBox.innerHTML += `<p style="color:red;">ChatGPT Error: Backend not running</p>`;
    }

    chatBox.scrollTop = chatBox.scrollHeight;
});
    </script>
</body>
</html>
